@{
    ViewData["Title"] = "Home Page";
}
<h1>Welcome to Quoting Dojo</h1>
@if(ViewBag.error != null)
{
    @foreach(string error in ViewBag.error)
    {
        <p>@error</p>        
    }

}
<form action="/submit" method="post">
    <div class="form-group">
        <h4>Your Name : </h4><input type="text" name="name"/>
        <h4>Favorite Quote : </h4><textarea name="quote"></textarea>
        <hr>
        <button type="submit">Add My Quote!</button>                    
    </div>
</form>
<form action="/quotes" method="get">
    <button type="submit">Go to the Quotes!</button>
</form>



